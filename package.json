    "tree",
    "directory",
    "ascii",
    "cli",
    "file-tree"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bireycikan/treeviz-cli"
  },
  "homepage": "https://github.com/bireycikan/treeviz-cli#readme",
  "bugs": {
    "url": "https://github.com/bireycikan/treeviz-cli/issues"
  },
  "devDependencies": {
    "bun-types": "^1.3.8"
  }
}