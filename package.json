{
  "name": "treeviz-cli",
  "version": "1.1.1",
  "description": "Generate ASCII directory trees from the terminal",
  "type": "module",
  "bin": {
    "treeviz": "./dist/index.js"
  },
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun build ./src/index.ts --outdir ./dist --target node",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{ts,js,mjs,json,md}\"",
    "prepare": "husky"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "tree",
    "directory",
    "ascii",
    "cli",
    "file-tree"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bireycikan/treeviz-cli"
  },
  "homepage": "https://github.com/bireycikan/treeviz-cli#readme",
  "bugs": {
    "url": "https://github.com/bireycikan/treeviz-cli/issues"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "bun-types": "^1.3.8",
    "eslint": "^10.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "typescript-eslint": "^8.54.0"
  }
}
